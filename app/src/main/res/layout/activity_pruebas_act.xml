<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ActividadGuiaSubirNuevo">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar"
            android:gravity="center"
            android:textSize="22sp"/>

        <EditText
            android:id="@+id/dato1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="dato 1"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/dato2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="dato 2"
            android:minHeight="48dp" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guardar"
            android:id="@+id/guardar"/>

        <Button
            android:id="@+id/btnAtras"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Atras" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/buscarDatoET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Dato a Buscar"
                android:minHeight="48dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Buscar"
                    android:id="@+id/buscarDato"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Eliminar"
                    android:id="@+id/eliminarDato"/>
            </LinearLayout>
            <EditText
                android:id="@+id/ActualizarDatoET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Dato a actualizar"
                android:minHeight="48dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Actualizar"
                    android:id="@+id/actualizarDato"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Agregar un array"
                    android:id="@+id/agregarArray"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="eliminar un array"
                    android:id="@+id/eliminarArray"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>