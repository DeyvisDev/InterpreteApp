<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActividadTextoSenaSubirNuevo"
    android:orientation="vertical">


    <EditText
        android:id="@+id/significadoTexto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Significado en Texto"
        app:layout_constraintBottom_toTopOf="@+id/significadoDescripcion"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/significadoDescripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Significado en Descripcion"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="343dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="407dp"
        android:layout_height="166dp"
        app:layout_constraintBottom_toTopOf="@+id/significadoTexto"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/btnGaleria"
            android:layout_width="189dp"
            android:layout_height="65dp"
            android:text="Ir a Galeria"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.597"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btnSubirImg"
            android:layout_width="190dp"
            android:layout_height="69dp"
            android:text="Subir Img y Texto"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.927"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.601"
            tools:ignore="MissingConstraints" />
    </LinearLayout>


    <Button
        android:id="@+id/btnAtras"
        android:layout_width="134dp"
        android:layout_height="75dp"
        android:text="Atras"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="MissingConstraints" />

</LinearLayout>